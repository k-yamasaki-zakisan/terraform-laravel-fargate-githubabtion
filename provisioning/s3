
resource "aws_s3_bucket" "tfstate_share" {
  bucket = "laravel-fargate-terraform"
}

resource "aws_s3_bucket_acl" "tfstate_share" {
  bucket = aws_s3_bucket.tfstate_share.id
  acl    = "private"
}

resource "aws_s3_bucket_server_side_encryption_configuration" "tfstate_share" {
  bucket = aws_s3_bucket.tfstate_share.id

  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm = "AES256"
    }
  }
}

resource "aws_s3_bucket_public_access_block" "tfstate_share" {
  bucket                  = aws_s3_bucket.tfstate_share.id
  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}